mvsf va00 va01
tick 200

* BUG OVs
* ov01 - movement direction
* ov02 - 1 = picked up
* ov03 - timer counter
* ov04 - life counter
* ov05 - 1 = half eaten
* ov06 - last X position - used for wall detection
* ov07 - collision check counter

* ACTIVATE 1
scrp 2 17 32206 1
  * Cap at 10 bugs
  doif totl 2 13 32206 ge 10
    stop
  endi
  * Create Bounty Bug
  lock
  * Check if nest is in the inventory - thanks to Uttar for this
  setv va00 0
  seta va01 targ
  targ game "c3_inventory"
  epas 2 17 32206
    doif va01 eq targ
      setv va00 1
    endi
  next
  * Create if not in inventory
  doif va00 eq 0
    setv va01 posx
    setv va02 posy
    subv va01 18
    subv va02 25
    * Decide colour
    setv va03 rand 1 3
    doif va03 eq 1
      setv va04 1
    elif va03 eq 2
      setv va04 11
    else
      setv va04 21
    endi
    new: simp 2 13 32206 "bounty bugs" 10 va04 3000
    attr 194
    bhvr 0
    accg 3
    elas 0
    fric 50
    perm 100
    puhl -1 23 25
    doif tmvt va01 va02 eq 1
      mvto va01 va02
      snde "bbg1"
      * Decide which way to go
      doif rand 1 2 eq 1
        setv ov01 4
      else
        setv ov01 -4
      endi
      setv ov02 0
      setv ov03 0
      setv ov04 rand 150 300
      setv ov05 0
      setv ov07 0
      wait rand 5 10
      bhvr 59
      tick rand 15 25
    else
      kill targ
    endi
  endi
endm

