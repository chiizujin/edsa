* TIMER
scrp 2 13 32206 9
  * Keep moving unless half eaten, that would be silly
  doif ov05 eq 0
     fric 10
     velo ov01 vely
     anim [1 1 2 2 1 1 0 0]
     over
     fric 50
  endi
  * Update timer counters
  addv ov03 1
  subv ov04 1
  addv ov07 1
  * Check if still in same place
  doif ov07 ge 2 and ov05 eq 0
    setv ov07 0
    setv va01 posx
    setv va02 posx
    subv va01 5
    addv va02 5
    doif ov06 gt va01 and ov06 lt va02
      doif rand 1 2 eq 1
        * Try to jump
        setv va03 ov01
        mulv va03 rand 2 3
        anim [0 1 2]
        over
        velo va03 rand -10 -20
        anim [2 2 2 2 2 2 2 2 2 1 0]
        over
      else
        * Turn round
        negv ov01
        * Set collision counter to -1 to flag collision
        setv ov07 -1
      endi
    endi
    setv ov06 posx
  endi
  * Pick another random direction unless half eaten or collision
  doif ov03 ge 100 and ov05 eq 0 and ov07 ne -1
    doif rand 1 2 eq 1
       setv ov01 4
     else
      setv ov01 -4
    endi
    * Reset counter
    setv ov03 0
  endi
  * Check if bug is in the inventory - thanks to Uttar for this
  setv va00 0
  seta va01 targ
  targ game "c3_inventory"
  epas 2 13 32206
    doif va01 eq targ
      setv va00 1
    endi
  next
  * Decide whether to die or release bounty
  doif ov04 le 0 and ov02 eq 0
    setv va01 rand 1 10
    doif va01 le 4
      * Stop moving & remove hand/creature rights
      tick 0
      attr 192
      bhvr 0
      fric 100
      anim []
      doif ov05 eq 0
        pose 0
      endi
    endi
    * Release bounty unless half eaten or in inventory
    doif va01 lt 4 and ov05 eq 0 and va00 eq 0
      wait 10
      doif ov01 gt 0
        anim [0 7 8 9 9 8 7 0]
      else
        anim [0 4 5 6 6 5 4 0]
      endi
      snde "bbg2"
      call 1000 0 0
      wait 20
    endi
    doif va01 le 4
      * Fade out
      setv va02 0
      loop
        inst
        alph va02 1
        addv va02 1
        slow
      untl va02 gt 256
      kill targ
    endi
  endi
endm

